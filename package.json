    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.13.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=4.10.0",
    "@typescript-eslint/parser": ">=4.10.0",
    "eslint": ">=5.0.0",
    "eslint-plugin-react": ">=7.21.5",
    "eslint-plugin-react-hooks": ">=4.2.0"
  }
