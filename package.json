{
  "name": "eslint-config-zoro",
  "version": "9.0.0",
  "packageManager": "pnpm@10.28.1",
  "description": "A fully customized ESLint configuration based on the default ESLint, React and TypeScript rules.",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/eslint-config-zoro"
  },
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "node",
    "perfectionist",
    "react",
    "stylistic",
    "typescript"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "husky",
    "prepublish": "npm run build",
    "prebuild": "rimraf dist",
    "build": "tsc && tsc-alias && npm run lint",
    "lint": "eslint src/**",
    "test": "vitest run",
    "upgradepackages": "ncu -u"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "dependencies": {
    "globals": "^17.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.7.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.3.1",
    "rimraf": "^6.1.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "@stylistic/eslint-plugin": ">=5.7.0",
    "@typescript-eslint/eslint-plugin": ">=8.53.0",
    "@typescript-eslint/parser": ">=8.53.0",
    "eslint": ">=9.39.0",
    "eslint-plugin-n": ">=17.23.0",
    "eslint-plugin-perfectionist": ">=5.3.0",
    "eslint-plugin-react": ">=7.37.0",
    "eslint-plugin-react-hooks": ">=7.0.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-n": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ]
}
