{
  "name": "eslint-config-zoro",
  "version": "7.1.0",
  "description": "A fully customized ESLint configuration based on the default ESLint, React and TypeScript rules.",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/eslint-config-zoro"
  },
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "javascript",
    "react",
    "styleguide",
    "typescript"
  ],
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./eslint": "./dist/eslint.js",
    "./node": "./dist/node.js",
    "./react": "./dist/react.js",
    "./stylistic": "./dist/stylistic.js",
    "./typescript": "./dist/typescript.js"
  },
  "scripts": {
    "prepare": "husky",
    "prebuild": "npm run clean",
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist/*",
    "lint": "eslint src/**",
    "test": "jest --config jest.config.js",
    "test:watch": "npm test -- --watch",
    "upgradepackages": "./scripts/upgrade_packages.sh"
  },
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,ts,tsx}": [
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@stylistic/eslint-plugin": ">=5.2.3",
    "@typescript-eslint/eslint-plugin": ">=8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-n": ">=17.21.3",
    "eslint-plugin-react": ">=7.37.5",
    "eslint-plugin-react-hooks": ">=5.2.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-n": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ]
}
