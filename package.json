{
  "name": "eslint-config-zoro",
  "version": "6.1.0",
  "description": "A fully customized ESLint configuration based on the default ESLint, React and TypeScript rules.",
  "main": "index.js",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/eslint-config-zoro"
  },
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "javascript",
    "react",
    "styleguide",
    "typescript"
  ],
  "scripts": {
    "prepare": "husky",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.prod.json",
    "watch": "tsc -p tsconfig.prod.json -w",
    "clean": "rimraf dist/*",
    "lint": "eslint src/**",
    "test": "jest --config jest.config.js",
    "test:watch": "npm test -- --watch",
    "upgradepackages": "./scripts/upgrade_packages.sh"
  },
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.7.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react": "^7.35.2",
    "eslint": "^9.9.1",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@stylistic/eslint-plugin": ">=2.7.2",
    "@typescript-eslint/eslint-plugin": ">=8.4.0",
    "eslint-plugin-node": ">=11.1.0",
    "eslint-plugin-react-hooks": ">=4.6.0",
    "eslint-plugin-react": ">=7.35.0",
    "eslint": "^9.9.1"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-node": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  }
}
