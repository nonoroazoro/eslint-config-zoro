{
  "name": "eslint-config-zoro",
  "version": "5.54.0",
  "description": "A fully customized ESLint configuration based on the default ESLint, React and TypeScript rules.",
  "main": "index.js",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/eslint-config-zoro"
  },
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "javascript",
    "react",
    "styleguide",
    "typescript"
  ],
  "scripts": {
    "prepare": "husky install",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.prod.json",
    "watch": "tsc -p tsconfig.prod.json -w",
    "clean": "rimraf dist/*",
    "lint": "eslint src/**",
    "test": "jest --config jest.config.js",
    "test:watch": "npm test -- --watch",
    "upgradepackages": "./scripts/upgrade_packages.sh"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.2",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=5.54.0",
    "eslint-plugin-node": ">=11.1.0",
    "eslint-plugin-react-hooks": ">=4.6.0",
    "eslint-plugin-react": ">=7.32.0",
    "eslint": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-node": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  }
}
