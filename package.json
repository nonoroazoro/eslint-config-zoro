{
  "name": "eslint-config-zoro",
  "version": "5.12.1",
  "description": "A fully customized ESLint configuration based on the default ESLint, React and TypeScript rules.",
  "main": "index.js",
  "author": {
    "name": "nonoroazoro",
    "email": "xiaochao.k@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonoroazoro/eslint-config-zoro"
  },
  "keywords": [
    "config",
    "eslint",
    "eslintconfig",
    "javascript",
    "react",
    "styleguide",
    "typescript"
  ],
  "scripts": {
    "prepare": "husky install",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json -w",
    "clean": "rimraf dist/*",
    "lint": "eslint src/**",
    "test": "jest --config jest.config.js",
    "test:watch": "npm test -- --watch",
    "upgradepackages": "./scripts/upgrade_packages.sh"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=5.12.0",
    "eslint": ">=6.0.0",
    "eslint-plugin-react": ">=7.28.0",
    "eslint-plugin-react-hooks": ">=4.3.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    }
  }
}
