{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "declaration": false,
        "sourceMap": false,
        "moduleResolution": "node",
        "allowUnreachableCode": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "strictBindCallApply": true,
        "strictNullChecks": true
    },
    "include": [
        "src",
        "tests"
    ]
}
