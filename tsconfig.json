{
    "compilerOptions": {
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "Node",
        "declaration": false,
        "sourceMap": false,
        "allowUnreachableCode": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "lib": [
            "ESNext"
        ]
    },
    "include": [
        "src",
        "tests"
    ]
}
